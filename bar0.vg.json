{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Life expectancy by sex and states",
        "fontSize": 18,
        "anchor": "middle"
    },
    "width": 105,
    "height": 100,
    "data": {
        "url": "https://gist.githubusercontent.com/xrickenx/d03c609c168cdaebe321a8878c1396a5/raw/be4e70ed64002e400f2e484238b1f5fcfcefca9b/live_expectancy_by_sex_state_0-6.csv",
        "format": {
            "type": "csv"
        }
    },
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "YEAR",
            "type": "ordinal",
            "title": "Year"
        },
        "y": {
            "field": "LIFE EXPECTANCY",
            "type": "quantitative",
            "title": "Life Expectancy"
        },
        "xOffset": {
            "field": "SEX"
        },
        "color": {
            "field": "SEX",
            "type": "nominal",
            "scale": {
                "domain": [
                    "Male",
                    "Female"
                ],
                "range": [
                    "#1f77b4",
                    "#e45756"
                ]
            },
            "title": "Sex"
        },
        "column": {
            "field": "STATE",
            "type": "nominal",
            "title": "State"
        },
        "tooltip": [
            {
                "field": "STATE",
                "title": "State"
            },
            {
                "field": "SEX",
                "title": "Sex"
            },
            {
                "field": "LIFE EXPECTANCY",
                "title": "Life Expectancy"
            },
            {
                "field": "YEAR",
                "title": "Year"
            }
        ]
    }
}