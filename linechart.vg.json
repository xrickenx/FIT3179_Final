{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Life Expectancy by Sex and Ethnic Groups",
        "fontSize": 18,
        "anchor": "middle"
    },
    "width": "container",
    "height": 250,
    "data": {
        "url": "https://gist.githubusercontent.com/xrickenx/d03c609c168cdaebe321a8878c1396a5/raw/be4e70ed64002e400f2e484238b1f5fcfcefca9b/live_expectancy_by_sex_ethnic.csv",
        "format": {
            "type": "csv"
        }
    },
    "transform": [
        {
            "filter": {
                "field": "YEAR",
                "range": [
                    2006,
                    2022
                ]
            }
        }
    ],
    "facet": {
        "field": "SEX",
        "type": "nominal",
        "title": null
    },
    "spec": {
        "params": [
            {
                "name": "ethnicHighlight",
                "select": {
                    "type": "point",
                    "fields": [
                        "ETHNIC"
                    ]
                },
                "bind": "legend"
            }
        ],
        "mark": {
            "type": "line",
            "point": true
        },
        "encoding": {
            "x": {
                "field": "YEAR",
                "type": "ordinal",
                "title": "Year"
            },
            "y": {
                "field": "LIFE EXPECTANCY",
                "type": "quantitative",
                "axis": {
                    "title": "Life Expectancy (years)"
                }
            },
            "color": {
                "field": "ETHNIC",
                "type": "nominal",
                "legend": {
                    "title": "Ethnicity",
                    "orient": "bottom"
                }
            },
            "opacity": {
                "condition": {
                    "param": "ethnicHighlight",
                    "value": 1
                },
                "value": 0.2
            },
            "tooltip": [
                {
                    "field": "YEAR",
                    "title": "Year"
                },
                {
                    "field": "LIFE EXPECTANCY",
                    "title": "Life Expectancy"
                },
                {
                    "field": "ETHNIC",
                    "title": "Ethnicity"
                },
                {
                    "field": "SEX",
                    "title": "Sex"
                }
            ]
        }
    }
}