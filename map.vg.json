{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": {
            "signal": "'Overall (across all sex and ethnic groups) in year ' + selectedYear"
        },
        "fontSize": 18,
        "anchor": "middle",
        "dx": 55
    },
    "width": "container",
    "height": 400,
    "data": {
        "url": "https://gist.githubusercontent.com/xrickenx/d03c609c168cdaebe321a8878c1396a5/raw/be4e70ed64002e400f2e484238b1f5fcfcefca9b/live_expectancy_by_state.csv",
        "format": {
            "type": "csv"
        }
    },
    "config": {
        "view": {
            "stroke": null
        }
    },
    "params": [
        {
            "name": "selectedYear",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 2016,
                "max": 2022,
                "step": 1,
                "name": "Select the year:"
            }
        }
    ],
    "transform": [
        {
            "filter": "year(datum.YEAR) == selectedYear"
        },
        {
            "lookup": "STATE",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/jnewbery/CartogramMalaysia/refs/heads/master/public/data/malaysia-states.topojson",
                    "format": {
                        "type": "topojson",
                        "feature": "states"
                    }
                },
                "key": "properties.Name",
                "fields": [
                    "properties",
                    "type",
                    "geometry"
                ]
            }
        },
        {
            "calculate": "geoCentroid(null, datum.geometry)",
            "as": "centroid"
        },
        {
            "calculate": "datum.centroid[0] + 0.03",
            "as": "centroidX"
        }
    ],
    "projection": {
        "type": "mercator"
    },
    "layer": [
        {
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "color": {
                    "field": "LIFE EXPECTANCY",
                    "type": "quantitative",
                    "scale": {
                        "domain": [
                            70,
                            80
                        ],
                        "range": [
                            "#add8e6",
                            "#00008b"
                        ]
                    },
                    "legend": {
                        "title": "Life Expectancy"
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.Name",
                        "title": "State"
                    },
                    {
                        "field": "LIFE EXPECTANCY",
                        "title": "Life Expectancy"
                    },
                    {
                        "field": "YEAR",
                        "title": "Year"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "color": "#333333"
            },
            "encoding": {
                "longitude": {
                    "field": "centroidX"
                },
                "latitude": {
                    "field": "centroid[1]"
                },
                "text": {
                    "field": "properties.Name"
                },
                "fontSize": {
                    "signal": "clamp(5, width / 50, 20)"
                }
            }
        }
    ]
}