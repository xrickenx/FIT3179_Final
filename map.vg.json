{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": {
            "signal": "'Overall (across all sex and ethnic groups) in year ' + selectedYear"
        },
        "fontSize": 18,
        "anchor": "middle",
        "dx": 55
    },
    "width": "container",
    "height": 400,
    "data": {
        "url": "https://gist.githubusercontent.com/xrickenx/d03c609c168cdaebe321a8878c1396a5/raw/be4e70ed64002e400f2e484238b1f5fcfcefca9b/live_expectancy_by_state.csv",
        "format": {
            "type": "csv"
        }
    },
    "config": {
        "view": {
            "stroke": null
        }
    },
    "params": [
        {
            "name": "selectedYear",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 2016,
                "max": 2022,
                "step": 1,
                "name": "Select the year:"
            }
        }
    ],
    "transform": [
        {
            "filter": "year(datum.YEAR) == selectedYear"
        },
        {
            "lookup": "STATE",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/jnewbery/CartogramMalaysia/refs/heads/master/public/data/malaysia-states.topojson",
                    "format": {
                        "type": "topojson",
                        "feature": "states"
                    }
                },
                "key": "properties.Name",
                "fields": [
                    "properties",
                    "type",
                    "geometry"
                ]
            }
        },
        {
            "calculate": "geoCentroid(null, datum.geometry)",
            "as": "centroid"
        },
        {
            "calculate": "datum.centroid[0]",
            "as": "centroidX"
        },
        {
            "calculate": "datum.centroid[1]",
            "as": "centroidY"
        },
        {
            "calculate": "((datum['LIFE EXPECTANCY'] - 70) / (80 - 70)) * 100",
            "as": "normalized_life_expectancy_percentage"
        }
    ],
    "projection": {
        "type": "mercator"
    },
    "padding": {
        "top": 40,
        "right": 40,
        "bottom": 40,
        "left": 40
    },
    "layer": [
        {
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "color": {
                    "field": "normalized_life_expectancy_percentage",
                    "type": "quantitative",
                    "scale": {
                        "domain": [
                            0,
                            100
                        ],
                        "range": [
                            "#add8e6",
                            "#00008b"
                        ]
                    },
                    "legend": {
                        "title": "Life Expectancy (%)"
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.Name",
                        "title": "State"
                    },
                    {
                        "field": "normalized_life_expectancy_percentage",
                        "title": "Life Expectancy (%)",
                        "format": ".2f"
                    },
                    {
                        "field": "YEAR",
                        "title": "Year"
                    }
                ]
            }
        },
        {
            "transform": [
                {
                    "calculate": "datum.properties.Name === 'Penang' ? datum.centroidX - 0.58 : datum.properties.Name === 'Perlis' ? datum.centroidX - 0.4 : datum.properties.Name === 'Perak' ? datum.centroidX - 0.15 : datum.properties.Name === 'Selangor' ? datum.centroidX - 0.1 : datum.properties.Name === 'Kuala Lumpur' ? datum.centroidX - 0.5 : datum.properties.Name === 'Putrajaya' ? datum.centroidX - 0.5 : datum.properties.Name === 'Labuan' ? datum.centroidX - 0.35 : datum.centroidX",
                    "as": "adjustedCentroidX"
                },
                {
                    "calculate": "datum.properties.Name === 'Penang' ? datum.centroidY + 0.03 : datum.properties.Name === 'Selangor' ? datum.centroidY + 0.1 : datum.properties.Name === 'Negeri Sembilan' ? datum.centroidY - 0.03 : datum.properties.Name === 'Melaka' ? datum.centroidY + 0.03 : datum.centroidY",
                    "as": "adjustedCentroidY"
                }
            ],
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "color": "#333333",
                "fontWeight": "bold",
                "fontSize" : 9
            },
            "encoding": {
                "longitude": {
                    "field": "adjustedCentroidX"
                },
                "latitude": {
                    "field": "adjustedCentroidY"
                },
                "text": {
                    "condition": [
                        {
                            "test": "datum.properties.Name === 'Kuala Lumpur'",
                            "value": "K.Lumpur"
                        },
                        {
                            "test": "datum.properties.Name === 'Negeri Sembilan'",
                            "value": "N.Sembilan"
                        }
                    ],
                    "field": "properties.Name"
                }
            }
        }
    ]
}